{% extends 'base.html.twig' %}

{% block title %}Prestation index{% endblock %}

{% block body %}
    <h1>Prestation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Note</th>
                <th>Paymentmethod</th>
                <th>Paymentstatus</th>
                <th>Date</th>
                <th>Reference</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prestation in prestations %}
            <tr>
                <td>{{ prestation.id }}</td>
                <td>{{ prestation.price }}</td>
                <td>{{ prestation.note }}</td>
                <td>{{ prestation.paymentmethod }}</td>
                <td>{{ prestation.paymentstatus ? 'Yes' : 'No' }}</td>
                <td>{{ prestation.date ? prestation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ prestation.reference }}</td>
                <td>
                    <a href="{{ path('prestation_show', {'id': prestation.id}) }}">show</a>
                    <a href="{{ path('prestation_edit', {'id': prestation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prestation_new') }}">Create new</a>
{% endblock %}
